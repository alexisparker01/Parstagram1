<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvUsernamePD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/profilePic"
        android:fontFamily="sans-serif-thin"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="rahul" />

    <ImageView
        android:id="@+id/ivImagePD"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/profilePic"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/likesPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePD"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/ufi_heart" />


    <ImageView
        android:id="@+id/commentPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePD"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/likesPD"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/dmPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePD"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_toEndOf="@+id/commentPD"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/bookmarkPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagePD"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/dmPD"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:scaleX="1.08"
        android:scaleY="1.08"
        android:tint="@color/black"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvUsernameDescriptionPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dmPD"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="15sp"
        tools:text="rahul" />

    <TextView
        android:id="@+id/tvDescriptionPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dmPD"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvUsernameDescriptionPD"
        android:fontFamily="sans-serif-light"
        tools:text="trying to look hipster" />

    <TextView
        android:id="@+id/tvCreatedAtPD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescriptionPD"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-condensed-light"
        tools:text="5m" />



        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="88dp"
            android:layout_height="55dp"
            tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>